{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
    "data": {
     "url": "https://raw.githubusercontent.com/ReubenAcacia/ReubenAcacia.github.io/main/bar.csv"
    },
  
      "title": {
        "text": "Employment Growth Rate in the West Midlands 2022-23",
        "anchor": "start",
        "subtitle": "Source: HMRC"
      },
      "height": 350,
      "width": 350,
  
  



 "layer": [
    {
      "params": [
        {"name": "highlight", "select": {"type": "point", "on": "mouseover"}}
      ],
      "mark": "bar",
      "encoding": {

        "color": {
          "field": "v",
          "scale": {"range": ["#880000", "#000"]},
          "legend": null
        },

        "x": {
          "field": "b",
          "type": "quantitative",
          "axis": { "gridOpacity": 0.2, "title": "Percentage Growth Rate in Employment"}
        },
        "y": {
            "title": "Sector",
          "field": "a",
          
          "axis": {"labelFontSize": 11}
        }
         
        },

          "opacity": {
          "condition": {"test": {"param": "highlight"}, "value": 1},
          "value": 0.4
        }
      
      }
    
    ,{
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 2,
        "size": 10
      },
      "encoding": {
        "text": {"field": "b", "type": "quantitative"},
        "x": {
          "field": "b",
          "type": "quantitative",
          "axis": { "gridOpacity": 0.5}
      
        },
        "y": {
          "field": "a",
          "sort": {"field": "rank", "order": "descending"}
        },
       
        "color": {
       
          "scale": {"range": ["#880000", "#000"]},
          "legend": null
        },
        "opacity": {
          "condition": {"test": {"param": "highlight"}, "value": 1},
          "value": 0.2
        }
      }
    }
  ],
  "config": {"view": {"stroke": null}}
}
  
