{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
    "data": {
     "url": "https://raw.githubusercontent.com/ReubenAcacia/ReubenAcacia.github.io/main/bar.csv"
    },
  
      "title": {
        "text": "Employment Growth Rate in the West Midlands 2022-23",
        "anchor": "start",
        "subtitle": "Source: HMRC"
      },
      "height": 350,
      "width": 350,
  
  
  
    "mark": "bar",
    "encoding": {

     "color": {
          "field": "variable",
          "scale": {"range": ["#880000", "#000"]},
          "legend": null
        },

      "x": {
        "field": "a", "type": "nominal",
         "field": "b", "type": "quantitative",
        "axis": {
          "domain": false,
          "ticks": false,
          "labelAngle": 0,
          "labelPadding": 4,
         "title": "Percentage Growth in Employment"
        }
      },
      "y": {
        "field": "a", "type": "nominal",
        "axis": {
           "title": "Sector",
          "gridColor": {
            "condition": {"test": "datum.value === 0", "value": "black"},
            "value": "#ddd"
           
          }
        }
      }
    }
  }
  
