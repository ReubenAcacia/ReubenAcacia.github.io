{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Chart 5: Regression of Production Costs against Metacritic Scores",
    "subtitle": ["2014-2018, Source: Deadline, IMDB ", "Size of circle is proportion to worldwide box office gross", ""],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "#000000",
    "subtitleColor": "#3a3a3a"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ReubenAcacia/ReubenAcacia.github.io/main/data_films_clean.csv"
  },
  "height": 300,
  "width": 295,
  "config": {
    "background": "#FeFeF8",
    "view": {
      "stroke": "transparent"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "circle",
        "point": false,
        "clip": true,
        "color": "#FFD300"
      },


      "encoding": {

             "color": {
      "field": "year", 
      "type": "nominal", 
      "title":null, 
      "scale": {"scheme": "turbo"}
    },

     "size": {
          "field": "metascore",
          "type": "quantitative",
          "legend": null,

          "scale": {"range": [10, 400]}},
          

        "x": {
          "field": "cost",
          "type": "quantitative",
          "title": "Production Costs (Millions US$)",
          "axis": {
            "grid": false,
            "domainColor": "#000000",
            "labelColor": "#000000",
            "tickColor": "#000000",
            "gridColor": "black",
            "titleColor": "#3a3a3a"
          },
          "scale": {
            "domain": [
              46,
              58
            ]
          }
        },
        "y": {
          "field": "metascore",
          "type": "quantitative",
          "title": "Metacritic Score",
          "axis": {
            "grid": false,
            "domainColor": "#000000",
            "labelColor": "#000000",
            "tickColor": "#000000",
            "gridColor": "black",
            "titleColor": "#3a3a3a"
          },
          "scale": {
            "domain": [
              0,
              40
            ]
          }
        },
        "tooltip": [
          {
            "field": "film",
            "type": "nominal",
            "title": "Film"
          },
          {
            "field": "cost",
            "type": "quantitative",
            "title": "Production Costs"
          },
          {
            "field": "metascore",
            "type": "quantitative",
            "title": "Metacritic Score"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "#4d4d4ddf",
        "strokeWidth": 2
      },
      "transform": [
        {
          "regression": "metascore",
          "on": "cost"
        }
      ],
      "encoding": {
        "x": {
          "field": "cost",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              300
            ]
          }
        },
        "y": {
          "field": "metascore",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              100
            ]


          }
        }
      }
    },
    {
      "transform": [
        {
          "regression": "metascore",
          "on": "cost",
          "params": true
        },
        {
          "calculate": "'RÂ²: '+format(datum.rSquared, '.2f')",
          "as": "R2"
        }
      ],
      "mark": {
        "type": "text",
        "color": "#000000",
        "x": "width",
        "align": "right",
        "y": 0
      },
      "encoding": {
        "text": {
          "type": "nominal",
          "field": "R2"
        }
      }
    }
  ]
}
