{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/ReubenAcacia/ReubenAcacia.github.io/main/line3.csv"
  },
  "config": {"view": {"stroke": "transparent"}},
  "title": {
    "text": "UK Economic Inactivity by Age and Gender",
    "subtitle": ["Source: ONS"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 11,
    "fontSize": 16,
    "anchor": "start"
  },
  "transform": [{"calculate": "datum.Val/100", "as": "Val1"},{"calculate": "datum.Val/100", "as": "val2"}],
  "width": 700,
  "height": 400,
  "layer": [
    {
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "axis": {
            "title": null,
            "labelPadding": 5,
            "labelFontSize": 11,
            "ticks": false,
            "grid": false,
             "title": "Year"
          }
        },
        "y": {
          "field": "Val1",
          "type": "quantitative",
          "axis": {
            "title": null,
            "labelPadding": 5,
            "labelFontSize": 11,
            "ticks": false,
            "gridOpacity": 0.6,
              "title": "GVA in millions of 2019 Â£ Stirling "
          }
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "legend": {"orient": "top", "title": null, "legendX": -20},
          "scale": {
            "domain": [ "Transportation and storage", "Professional scientific and technical", "Arts, entertainment and recreation", "Finance and insurance","Energy production and supply"],
            "range": ["lightblue", "orange", "green", "darkred","pink"]
          }
        }
      },
      "transform": [{"filter": {"param": "View"}}],
      "layer": [
        {"mark": "line"},
        {
          "params": [
            {
              "name": "label",
              "select": {
                "type": "point",
                "encodings": ["x"],
                "nearest": true,
                "on": "mouseover"
              }
            },
            {
              "name": "View",
              "select": {"type": "point", "fields": ["Series"]},
              "bind": {
                "input": "select",
                "options": ["Birmingham", "Solihull", "Coventry"],
                "name": "Group"
              },
              "value": "Coventry"
            }
          ],
          "transform": [{"filter": {"param": "View"}}],
          "mark": "point",
          "encoding": {
            "opacity": {
              "condition": {"param": "label", "empty": false, "value": 1},
              "value": 0
            }
          }
        }
      ]
    },
    {
      "transform": [
        {"filter": {"param": "label", "empty": false}},
        {"filter": {"param": "View"}}
      ],
      "layer": [
        {
          "mark": {"type": "rule", "color": "gray"},
          "encoding": {
            "x": {"type": "temporal", "field": "Date", "aggregate": "min"}
          }
        },
        {
          "encoding": {
            "text": {"type": "nominal", "field": "val2"},
            "x": {"type": "temporal", "field": "Date"},
            "y": {"type": "quantitative", "field": "Val1"}
          },
          "layer": [
            {
              "mark": {
                "type": "text",
                "stroke": "white",
                "strokeWidth": 2,
                "align": "left",
                "dx": 5,
                "dy": -5
              }, "encoding": {"color": {
                  "type": "nominal",
                  "field": "Type",
                  "scale": {
                    "domain": [
                      "Transportation and storage", "Professional scientific and technical", "Arts, entertainment and recreation", "Finance and insurance","Energy production and supply"
                      
                    ],
                    "range": ["lightblue", "orange", "green"]
                  }
                }}
            },
            {
              "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
              "encoding": {
                "color": {
                  "type": "nominal",
                  "field": "Type",
                  "scale": {
                    "domain": [
                        "Transportation and storage", "Professional scientific and technical", "Arts, entertainment and recreation", "Finance and insurance","Energy production and supply"
                     
                    ],
                    "range": ["lightblue", "orange", "green", "darkred","pink"]
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
